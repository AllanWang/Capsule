<resources>

    <!-- Base application theme. -->
    <style name="CapsuleAppTheme" parent="CapsuleAppTheme.Base" />

    <style name="CapsuleAppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CapsuleAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CapsuleAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CapsuleAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CapsuleRipplePreferenceTheme" parent="@style/CapsuleAppTheme">
        <item name="preferenceTheme">@style/CapsulePreferenceRippleTheme</item>
    </style>

    <style name="CapsulePreferenceRippleTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/CapsuleAppPreferenceRippleStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="CapsuleAppPreferenceRippleStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/capsule_preference_ripple</item>
    </style>
</resources>
